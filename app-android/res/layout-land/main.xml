<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mocap" />
    <!--
         <Button android:id="@+id/moca_main_record"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Lookup Patient Record" />
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/moca_main_view_patients"
            android:layout_width="@dimen/btn_main_width"
            android:layout_height="wrap_content"
            android:text="@string/button_main_view_patients" />

        <Button
            android:id="@+id/moca_main_procedure"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:text="@string/button_main_new_encounter" />

        <!-- TODO: needs to be removed -->
        <Button
            android:id="@+id/moca_main_transfers"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:text="@string/button_main_view_prior_encounters" />

        <Button
            android:id="@+id/moca_main_notifications"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:text="@string/button_main_view_notifications" />
    </LinearLayout>

</LinearLayout>